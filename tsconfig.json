{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "rootDir": "server",
    "paths": {
      "@/*": ["./server/*"]
    }
  },
  "include": ["server"],
  "exclude": ["node_modules", "client"]
}
